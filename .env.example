# Application environment
APP_ENV=dev
NODE_ENV=development

# Networking
PORT=4000
VITE_PORT=3000
VITE_HOST=0.0.0.0
VITE_ALLOWED_HOSTS=localhost,.cloud-schulz.de
VITE_BACKEND_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:3000
POSTGRES_PORT=5432

# API keys (REQUIRED)
# API_KEY: Used for /metrics endpoint authentication (minimum 16 characters)
# JWT_SECRET: Used for admin JWT token signing (minimum 32 characters)
# Generate secure random strings with: openssl rand -base64 32
API_KEY=CHANGE_ME_TO_RANDOM_STRING_16_CHARS_MIN
JWT_SECRET=CHANGE_ME_TO_RANDOM_STRING_32_CHARS_MIN
# OpenAI API key for GPT-4o models (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-key

# Models
REALTIME_MODEL=gpt-4o-realtime-preview
RESPONSES_MODEL=gpt-4o-mini

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/alexpert

# Optional Nginx Proxy Manager automation
NPM_BASE_URL=http://npm-proxy-manager:81/api
NPM_EMAIL=admin@example.com
NPM_PASSWORD=changeme
NPM_TOKEN=
NPM_CERTIFICATE_ID=0
NPM_LETSENCRYPT_EMAIL=
NPM_FORCE_SSL=false
